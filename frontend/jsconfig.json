{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"]
    },
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "checkJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": []
  },
  "include": ["frontend/src/components/**/*.js", "frontend/src/pages/**/*.jsx", "frontend/src/Layout.jsx"],
  "exclude": ["node_modules", "dist", "frontend/src/vite-plugins", "frontend/src/components/ui", "frontend/src/api", "frontend/src/lib"]
} 